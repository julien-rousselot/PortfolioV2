---
import { MENUS } from "../config";
import { Icon } from "astro-icon/components";
---

<div class="flex flex-row gap-4 items-center">
  {
    MENUS.map((item) => (
      <a
        href={item.link}
        target={item.target}
        class="h-full mx-0 md:mx-4 text-2xl text-slate-400 hover:text-slate-100 flex items-center gap-2"
        aria-label={item.title}
      >
        {item.icon && (
          <span class="orbitron">
            <Icon name={item.icon} width={16} height={16} class="text-slate-400" />
          </span>
        )}
        {/* // hide title in mobile if icon exists */}
        <span class={item.icon ? "hidden md:block orbitron text-sm" : "orbitron text-sm"}>{item.title}</span>
      </a>
    ))
  }
  <slot />
</div>

<!-- Style pour appliquer la police Honk -->
<style>
  .honk-custom {
    font-family: "Honk", system-ui, sans-serif;
    font-weight: 400;
    font-style: normal;
  }
  .sixtyfour {
  font-family: "Sixtyfour", sans-serif;
  font-optical-sizing: auto;
  font-weight: 400;
  font-style: normal;
  font-variation-settings:
    "BLED" 0,
    "SCAN" 0;
}
.orbitron {
  font-family: "Orbitron", sans-serif;
  font-optical-sizing: auto;
  font-weight: <weight>;
  font-style: normal;
}
</style>
